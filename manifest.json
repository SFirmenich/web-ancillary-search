{
  "manifest_version": 2,
  "name": "Augmented Search Services",
  "version": "1.0",
  "description": "...",
  "homepage_url": "https://sites.google.com/site/webancillarysearches/",

  // THIS IS COMMENTED SO IT CAN BE INTERPRETED BY GOOGLE CHROME :(
  "applications": {
    "gecko": {
      "strict_min_version": "55.0a1"
    }
  },

  "default_locale": "en",

  "browser_action": { //Note that your extension can have only one browser action
    "default_icon": {
      "16": "icons/logo-disabled-16.png",
      "64": "icons/logo-disabled-64.png"
    },
    "default_title": "searchApis",
    "browser_style": true
  },

  "background": {
    "scripts": [
      "background/browsers-standarization.js", 
      "background/BrowserUiManager.js", 
      "background/SearchTool.js", 
      "background/TemplatesCreator.js",
      "background/main.js"]
  },

  "sidebar_action": {
    "default_icon": "icons/logo-disabled-64.png",
    "default_title" : "Augmented Search Services",
    "default_panel": "sidebar//manage-services.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "<all_urls>",
    "contextMenus"
  ],

  "web_accessible_resources": [
    "/content_scripts/visualizations/datatables/index.html"
  ]
}
